    <table>
        <tr style="height:100px">
            <td style="width:100px"></td>
            <% Date::DAYNAMES.each do |day| %>
            <td style="width:100px">
                <%= day %>
            </td>
            <% end %>
        </tr>
        <% @sections.each do |section| %>
        <tr style="height:100px">
            <td style="width:100px">
                <%= section[:section_name] %>
            </td>

            <% 7.times do |day| %>
            <td style="width:100px">

              <div id="droppableDiv" class="dropBox" title="Today">
                <a href="#" id="Day" class="drop"></a> <!-- Begin Nav Bar -->
                <script src="js/Date.js" type="text/javascript"></script>
              </div>

                <% @assigned_events.select { |event|
                event[:end_date].wday==day and event[:section_id]==section[:section_id]}.each do |event| %>
                <div class="<%= event[:event_id] %>">
                  <%= event[:event_title] %>
                </div>
                <% end %>
            </td>

            <% end %>
        </tr>
        <% end %>
    </table>