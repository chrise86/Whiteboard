
    <style>
        .event{ width: 0px; height: 0px; padding: 20px; background-color:#e06043;}
        #Event1{width:60px; height:60px; margin: 2px; padding:10px; background-color:#C60; float:left;}
        #draggableContainer{background-color:#0F3; padding:20px; text-align:center; }

        #droppableDiv { width: 150px; height: 150px; padding: 0.5em; background-color:#C33}
        .drophover{ background-color: #1d5987;}

        table td
        {
            vertical-align:text-top;
            background: #f5f5dc;
        }

    </style>

    <script>
        $(function() {
            $('#draggableContainer');

            var xxx = $.find(".event1");
            $.each(xxx, function(index, item) {
                $(item).sortable().draggable({ opacity: 0.35 , containment: 'document', cursor:'pointer', revert: true});
            });

            $( "#droppableDiv" ).droppable({ hoverClass: 'drophover', tolerance:'pointer',
                over: function()
                {
                    //execute code you want when users hover in but havent dropped
                    $('#droppableDiv').text('here');
                },
                out: function()
                {
                    //execute code you want when users hover out
                    $('#droppableDiv').text('out');
                },
                drop: function(event, ui)
                {
                    //drop function with ui so we can receive div data
                    var draggableid = ui.draggable.attr("id");
                    var draggableClass = ui.draggable.attr("class");
                    var droppableId = $(this).attr("title");
                    if(draggableid == "draggableContainer")
                    {
                        //do nothing
                        alert("you shouldnt drag the container over the calender")
                    }
                    else
                    {
                        alert("you dropped " + draggableid + " on " + droppableId);
                        $( this ).addClass("alert")
                    }
                }
            });
        });
    </script>












