    <div id="draggableContainer">
        <% @unassigned_events.each do |course, events| %>

            <%#= course.name %>
            <% events.each do |event| %>
                <div id="Event1" class="event1">
                    <%= event.title %>
                </div>

            <% end %>

        <% end %>
